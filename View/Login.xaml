<Window x:Class="PARTS_ORDER.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PARTS_ORDER.View"
        mc:Ignorable="d"
        Title="Login" ResizeMode="NoResize" Width="250" Height="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Nazwa użytkownika" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="{Binding TextBoxUserText}" VerticalAlignment="Top" Width="150" Height="21"/>
        <Label Content="Hasło" HorizontalAlignment="Center" Margin="0,91,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,117,0,0" TextWrapping="Wrap" Text="{Binding TextBoxPassText}" VerticalAlignment="Top" Width="150" Height="21"/>
        <Button Content="ZALOGUJ" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Height="25" Width="74"/>

    </Grid>
</Window>
